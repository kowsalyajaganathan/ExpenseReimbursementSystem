<project default="run">
	<property name="lib.dir"     value="lib"/>

    <path id="classpath">
        <fileset dir="${lib.dir}" includes="**/*.jar"/>
    </path>

	<target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="bin/classes"/>
        <javac srcdir="src" destdir="bin/classes"  classpathref="classpath"/>
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="bin/jar"/>
        <jar destfile="bin/jar/Calculator.jar" basedir="bin/classes">
            <manifest>
                <attribute name="Main-Class" value="com.calc.main.Calculator"/>
            </manifest>
        </jar>
    </target>

    <target name="run" depends="jar">
        <java jar="build/jar/Calculator.jar" fork="true"/>
    </target>

</project>